{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [ "eslint:recommended", "prettier" ],
    "plugins": [ "prettier" ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": 2,
        "indent": [
            "error",
            2,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}